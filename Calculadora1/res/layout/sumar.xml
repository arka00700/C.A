<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/numDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="36dp"
        android:layout_y="50dp"
        android:text="Introduce el primer numero:" />

    <TextView
        android:id="@+id/numUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="162dp"
        android:text="Introduce el segundo numero:" />

    <EditText
        android:id="@+id/sumaNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="86dp"
        android:ems="10" android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/sumaNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="195dp"
        android:ems="10" android:inputType="number" />

    <Button
        android:id="@+id/calcularSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="280dp"
        android:text="Calcular Suma" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="367dp"
        android:text="TextView" />

</AbsoluteLayout>
